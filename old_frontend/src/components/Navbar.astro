---
import logo from '/spotiflyx_logo-circle.png';
import { Image } from 'astro:assets';
---

<header class="text-white font-bold flex justify-between items-center mx-16 mt-8 mb-56">
    <div class="logo cursor-pointer hover:text-slate-300 transition-all duration-200">
        <a href="/dashboard"><Image src="/spotiflyx_logo-circle.png" alt="Spotiflyx logo" height="50" width="50" /></a>
    </div>
    <div class="navbar flex gap-6">
        <ul class="flex gap-6 items-center">
            <li class="cursor-pointer py-3 px-7 rounded-full hover:bg-gray-800 hover:-translate-y-1 transition-all duration-200">About us</li>
            <li class="cursor-pointer py-3 px-7 rounded-full hover:bg-gray-800 hover:-translate-y-1 transition-all duration-200">Services</li>
            <li class="cursor-pointer py-3 px-7 rounded-full hover:bg-gray-800 hover:-translate-y-1 transition-all duration-200">Contact us</li>
        </ul>
        <ul class="flex gap-4 items-center">
            <a href="/login"><li class="cursor-pointer py-3 px-7 border-2 rounded-full hover:bg-gray-800 hover:-translate-y-1 transition-all duration-200">Log in</li></a>
            <a href="/signup"><li class="cursor-pointer py-3 px-7 border-2 rounded-full hover:bg-gray-800 hover:-translate-y-1 transition-all duration-200">Sign up</li></a>
        </ul>
    </div>
</header>
